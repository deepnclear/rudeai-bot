# Test Environment - Local Testing Only
ENVIRONMENT=development
DEBUG=true

# API Keys (dummy values for local testing - replace with real keys to test fully)
OPENAI_API_KEY=test_key_replace_with_real
TELEGRAM_BOT_TOKEN=test_token_replace_with_real

# Local webhook configuration
WEBHOOK_URL=http://localhost:8000
WEBHOOK_SECRET=test_webhook_secret_123456789

# Database (SQLite for testing)
DATABASE_URL=sqlite:///test_rudeai_bot.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# OpenAI Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=40
OPENAI_TEMPERATURE=0.7

# Logging (verbose for testing)
LOG_LEVEL=DEBUG
LOG_FILE=logs/test.log
LOG_RETENTION=1 day

# Security & Rate Limiting (lenient for testing)
RATE_LIMIT_PER_MINUTE=100
MAX_MESSAGE_LENGTH=2000

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=1