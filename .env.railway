# Railway Production Environment Configuration
# Copy these values to Railway's environment variables

# Environment
ENVIRONMENT=production
DEBUG=false

# API Keys (Set these in Railway dashboard)
OPENAI_API_KEY=your_openai_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook (Railway will auto-assign domain)
WEBHOOK_URL=https://your-app-name.up.railway.app
WEBHOOK_SECRET=12b3114962ebffc8a8ac1a5868a5b9c1077cead95588ee7497bdcccdd73ed6b7

# Database (Railway will provide this)
DATABASE_URL=${{DATABASE_URL}}

# Server (Railway manages these)
HOST=0.0.0.0
PORT=${{PORT}}

# OpenAI Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=40
OPENAI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=
LOG_RETENTION=7 days

# Security & Rate Limiting
RATE_LIMIT_PER_MINUTE=20
MAX_MESSAGE_LENGTH=1000

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=7

# Railway-specific configurations
RAILWAY_ENVIRONMENT=production
UVICORN_TIMEOUT_KEEP_ALIVE=30
UVICORN_ACCESS_LOG=true
UVICORN_RELOAD=false
UVICORN_WORKERS=1

# Health check settings
HEALTHCHECK_TIMEOUT=300
STARTUP_TIMEOUT=300

# Database connection settings for Railway
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600