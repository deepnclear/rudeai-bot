# Development Environment
ENVIRONMENT=development
DEBUG=true

# API Keys (Required - copy from your main .env)
OPENAI_API_KEY=your_openai_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook Configuration (for testing webhooks locally)
WEBHOOK_URL=http://localhost:8000
WEBHOOK_SECRET=dev_webhook_secret_123456

# Database (SQLite for development)
DATABASE_URL=sqlite:///rudeai_bot_dev.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# OpenAI Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=40
OPENAI_TEMPERATURE=0.7

# Logging (more verbose for development)
LOG_LEVEL=DEBUG
LOG_FILE=logs/dev.log
LOG_RETENTION=7 days

# Security & Rate Limiting (more lenient for development)
RATE_LIMIT_PER_MINUTE=50
MAX_MESSAGE_LENGTH=2000

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=1